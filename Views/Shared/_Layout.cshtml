<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IndigoErp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndigoErp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light" m>
            <a class="navbar-brand" href="#">
                <img src="placeholder.png" width="100" height="100" alt="Logo">
            </a>
            <button class="navbar-toggler menu-i" type="button" data-toggle="collapse" data-target="#HeaderNavBar" onclick="this.classList.toggle('active') aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="HeaderNavBar">
                <ul class="navbar-nav w-100 align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="cadastro.html">Cadastro</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="produtos.html">Produtos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="financeiro.html">Financeiro</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="manutencao.html">Manutenção</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="clientes.html">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="perfil.html">Perfil</a>
                    </li>
                    <div class="navbar-nav ml-auto">
                        <a href="#" id="user-dropdown" role="button" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class='user-avatar' src="placeholder.png" width="50" height="50"> {{ user["username"] }}</a>
                        <div class="dropdown-menu dropdown-menu-right mr-4 bg-lightblue" aria-labelledby="user_dropdown">
                            <a class="nav-link pl-1" href="login.html" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Deslogar</a>
                            <a class="nav-link pl-1" href="#" class="dropdown-item"><i class="fas fa-profile-alt"></i> Perfil</a>
                        </div>
                    </div>
                    </li>
                </ul>
            </div>
        </nav>

    </header>
    <div class="container-fluid " style="height:86%;">

            @RenderBody()

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - IndigoErp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
