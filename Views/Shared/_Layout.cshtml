<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IndigoErp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndigoErp.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/logo-favcon.png"/>
</head>
<body>
    <header class="position-sticky top-0 w-100" style="z-index:1000;">
        <nav class="navbar navbar-expand-lg " >
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="~/images/logo.png" style="opacity:0; animation:slide-in;animation-duration:0.2S;animation-fill-mode:forwards;" height="55" width="200">
            </a>

            <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <img class="img-fluid"width="23"  src="~/images/menu.png">
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav w-25 d-flex justify-content-between me-auto mb-2 mb-lg-0">

                        <li class="nav-item" >
                        <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                            <img src="~/images/indicadores.png" height="35">  <span class="navbar-text">KPIs</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand" asp-action="Index" asp-controller="Equip">
                                <img src="~/images/equipamentos.png" height="35">  <span class="navbar-text">Equipamentos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand" asp-action="Index" asp-controller="Ocorrencias">
                            <img src="~/images/ocorrencias.png" height="35" />  <span class="navbar-text">Ocorrências</span>
                            </a>
                        </li>
                    <li class="nav-item">
                        <a class="navbar-brand" asp-action="Index" asp-controller="Employee">
                            <img src="~/images/employees.png" height="35" />  <span class="navbar-text">Funcionários</span>
                        </a>
                    </li>
                    </ul>
                    <div class="nav-item dropdown">
                    <a style="color:black" class="nav-link dropdown-toggle"role="button" data-bs-toggle="dropdown" aria-expanded="false">
                         Olá @ViewBag.Name
                        </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-action="FailIndex" asp-controller="Maintence">Falhas</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-action="LogOff" asp-controller="User">Sair</a></li>
                    </ul>
                    </div>

                    <div class="nav-item dropdown" style="background-color:transparent;" id="sm-screen">
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Indicadores">Action</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Equip">Equipamentos</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Ocorrencias">Ocorrência</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="EMployee">Ocorrência</a></li>
                        </ul>
                    </div>
                </div>
        </nav>
        
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                                       

    </header>

    <style>
        body {
            background: aliceblue;
        }

        nav{
            -webkit-box-shadow: 0px 3px 25px -16px rgba(0,0,0,0.81);
            -moz-box-shadow: 0px 3px 25px -16px rgba(0,0,0,0.81);
            box-shadow: 0px 3px 25px -16px rgba(0,0,0,0.81);
        }

        .nav-item{
        
            background-color:aliceblue;
            color:white;
            border-radius:10px;
            padding:10px;
            opacity: 0;
            animation:slide-in;
            animation-delay:0.2s;
            animation-duration:0.2S;
            animation-fill-mode:forwards;



        }

        .nav-item:hover{
                background-color: lightcyan;
                border:solid 0.1px black;
                transition:0.4s;
               
        }

       

        @@media screen and (max-width:995px){
        
            li img{
            
                width:50px;
            
            }

            .navbar-text {
                display: initial
            }

            .nav-item {
                padding: 10px;
                margin:1%;
            }
        
        }

    </style>

    

    <div class="container-fluid">

            @RenderBody()

    </div>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>



</html>
