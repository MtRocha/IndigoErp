<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IndigoErp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndigoErp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light d-flex justify-content-between align-items-center">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home" >
                <img src="/images/logo.jpg" style="width:100%;animation:slide-in;animation-duration:1s;" alt="Logo">
            </a>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="HeaderNavBar">
                <ul class="navbar-nav w-75">
                    <li class=" nav-item d-flex flex-column align-items-center">
                        <a asp-action="Index" asp-controller="Solicitacao"><img src="~/images/indicadores.png"/></a><label class="nav-tëxt">Indicadores</label>
                    </li>
                    <li class=" nav-item d-flex flex-column align-items-center">
                         <a asp-action="Index" asp-controller="Equip"><img src="~/images/equipamentos.png"/></a><label class="nav-tëxt">Equipamentos</label>
                    </li>
                    <li class=" nav-item d-flex flex-column align-items-center">
                        <a asp-action="Index" asp-controller="Solicitacao"><img src="~/images/solicitacao.png" /></a><label class="nav-tëxt">Solicitação de serviços</label>
                    </li>
                    <li class=" nav-item d-flex flex-column align-items-center">
                        <a asp-action="Index" asp-controller="Solicitacao"><img src="~/images/consulta.png" /></a><label class="nav-tëxt">Consulta</label>
                    </li>
                    <li class=" nav-item d-flex flex-column align-items-center">
                        <a asp-action="Index" asp-controller="Solicitacao"><img src="~/images/financeiro.png" /></a><label class="nav-tëxt">Financeiro</label>
                    </li>
                </ul>
                 <div class="navbar-nav w-25 d-flex justify-content-center" style="animation:slide-in;animation-duration:1s;animation-delay:1s;animation-fill-mode:forwards ; opacity:0;">
                        <a href="#" id="user-dropdown" role="button" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class='user-avatar' src="~/images/user.png" width="50" height="50">    Usuário</a>
                        <div class="dropdown-menu dropdown-menu-right mr-4 bg-lightblue" aria-labelledby="user_dropdown">
                            <a class="nav-link pl-1" class="dropdown-item" asp-action="Index" asp-controller="User"><i class="fas fa-sign-out-alt"></i> Deslogar</a>
                        <a class="nav-link pl-1 dropdown-item"><i class="fas fa-profile-alt"></i> Perfil</a>
                        </div>
                 </div>
            </div>
        </nav>
        
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    </header>

    <style>
        body {
            background: white !important;
        }

        ul img {
            width: 100%;
            height: 100%;
        }

        ul a {
            width: 20%;
            height: 60%;
            opacity: 0;
            animation: slide-in;
            animation-duration: 1s;
            animation-delay: 1s;
            animation-fill-mode: forwards;
        }

        ul label {
            opacity: 0;
            animation: slide-in;
            animation-duration: 1s;
            animation-delay: 1s;
            animation-fill-mode: forwards;
        }

    </style>


    <div class="container-fluid " style="height:86%;">

            @RenderBody()

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - IndigoErp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>



</html>
