<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IndigoErp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndigoErp.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/logo-favcon.png" />
</head>
<body>
    <header class="position-sticky top-0 w-100" style="z-index:1000;">
        <nav class="navbar navbar-expand-lg ">
            <a class="navbar-brand">
                <img src="~/images/logo.png" style="opacity:0; animation:slide-in;animation-duration:0.2S;animation-fill-mode:forwards;" height="55" width="200">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <img class="img-fluid" width="23" src="~/images/menu.png">
            </button>
        </nav>

        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    </header>
    <div class="container-fluid " style="height:100%;">

        @RenderBody()

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

