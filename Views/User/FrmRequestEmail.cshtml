@model LoginModel
@{
    Layout = "_LayoutHome";

}

<head>
    <meta charset="UTF-8">
    <title>Recuperação de senha</title>
  
</head>
<body>
    <section class="w-100 h-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <form asp-action="SendVerificationCode" asp-controller="User">
                <div class="header">
                    <img src="/images/logo.jpg" style="width:65%;" alt="Logo">
                </div>
                <div class="message">
                    <h1 style="font-size:55px">Recuperação de Senha</h1>
                    <p>Insira seu email para que possamos enviar um código de verificação</p>
                </div>
                <div class="code-input">
                    <input type="email" asp-for=Email class="form-control" style="margin-bottom:10%;" pattern="^[0-9A-z._]+@@([0-9A-z]+\.[0-9A-z]+)+$" placeholder="Código de verificação">
               
                    <input class=" btn btn-primary" type="submit" value="Confirmar">
                </div>
            </form>
        </div>
    </section>
</body>
  <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #fff;
            --background-color: #f8f9fa;
        }

        div{
        
            margin-bottom:8%;
        
        }

        .container {
            
            height:60%;
            width: 30%;
            display:flex;
            flex-direction:column;
            justify-content:start;
            border: solid 2px var(--primary-color);
            border-radius:5px;

        }

        .header {
            display:flex;
            justify-content:center;
            background-color: none;
            padding-top: 20px;
        }

        .message {
            text-align: start;
            font-size: 18px;
        }

        .code-input {
            width: 100%;
            padding: 10px;
        }

        .submit-button {
            width: 100%;
            background-color: none;
            color: var(--primary-color);
            padding: 10px;
        }
    </style>