@model List<ReportModel>
<section class="col-12 h-75 d-flex justify-content-evenly align-items-center ">
    <aside class="col-md-2">
        <nav id="sidebarMenu" class="sidebar bg-white">
            <div class="position-sticky">
                <a asp-action="Index" class="list-group-item list-group-item-action py-2 ripple active">
                    <i class=""></i><span class="list-text">Ocorrências Pendentes</span>
                </a>
                <a asp-action="CreateReport" class="list-group-item list-group-item-action py-2 ripple ">
                    <i class="fas fa-chart-area fa-fw me-3"></i><span class="list-text">Nova Ocorrência</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-lock fa-fw me-3"></i><span class="list-text">Histórico de Ocorrências</span>
                </a>
            </div>
        </nav>
    </aside>
    <main class="col-8 d-flex flex-column justify-content-center align-items-center">

        @if (Model != null)
        {
            <h1 class="display-4">Ocorrências Pendentes</h1>

            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <td>Setor</td>
                        <td>Equipamento</td>
                        <td>Origem</td>
                        <td>Causa</td>
                        <td>Inicio</td>
                        <td>Ações</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Section</td>
                            <td>@item.FailType</td>
                            <td>@item.Origin</td>
                            <td>@item.FailCause</td>
                            <td>
                                @Convert.ToDateTime(item.InitialDate).ToShortDateString
                                @Convert.ToDateTime(item.Begin).ToShortTimeString</td>
                            <td class="btn-group dropright">
                                <div class="dropdown">
                                    <a class="nav-link " role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="~/images/setting.png">
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="javascript:EditEmployee(@item.Id)">Editar</a></li>
                                        <li><a class="dropdown-item" href="javascript:DeleteEmployee(@item.Id)">Excluir</a></li>
                                    </ul>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <h1 class="display-6" style="margin-top:5%;">Sem Ocorrências Pendentes</h1>
        }

    </main>

    <style>

        section label {
            font-size: 25px;
            margin-top: 10%;
        }


        .col-md-3 {
            height: 100%;
            display: flex;
            opacity: 0;
            animation: fade-in;
            animation-duration: 0.8s;
            animation-fill-mode: forwards;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

    </style>


</section>